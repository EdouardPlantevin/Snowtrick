{% extends "base.html.twig" %}

{% block title %}Liste des tricks{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}{% endblock %}

{% block body %}
    <div id="tricks">
        {% for trick in tricks %}
            <div class="trick-item">
                <a href="{{ path('show_trick', {'slug': trick.slug}) }}">
                    <img src="{{ asset('/images/trick/' ~ trick.photos[0].title) }}" alt="{{ trick.title }}">
                </a>
                <div class="info-trick">
                    <span class="name-trick">
                        {{ trick.title }}
                    </span>
                    <span class="action-trick">
                        <a href="#"><i class="fas fa-pencil-alt"></i></a><a href="{{ path('delete_trick', {'slug': trick.slug}) }}"><i class="fas fa-trash"></i></a>
                    </span>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}