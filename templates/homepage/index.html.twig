{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block title %}Snowtrick{% endblock %}

{% block body %}

    <div id="homepage">
        <div class="hero">
            <img src="https://static.seetheworld.com/image_uploader/photos/14/original/great-pre-season-snow-conditions-in-curchevel-courchevel-valley.jpg" alt="montagne">
            <a href="#tricks"><i class="fas fa-arrow-down"></i></a>
        </div>

        <h2 class="text-center mt-5">Tricks</h2>

        <div class="grid-section" id="tricks">
            {% for trick in tricks %}
                <div class="trick-item">
                    <a href="{{ path('show_trick', {'slug': trick.slug}) }}">
                        <img src="{{ asset('/images/trick/' ~ trick.photos[0].title) }}" alt="{{ trick.title }}">
                    </a>
                    <div class="info-trick">
                    <span class="name-trick">
                        {{ trick.title }}
                    </span>
                    <span class="action-trick">
                        <a href="{{ path('edit_trick', {'slug': trick.slug}) }}"><i class="fas fa-pencil-alt"></i></a><a href="{{ path('delete_trick', {'slug': trick.slug}) }}"><i class="fas fa-trash"></i></a>
                    </span>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="#tricks" class="arrow-up"><i class="fas fa-arrow-up"></i></a>
    </div>



{% endblock %}
