{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block title %}Snowtrick{% endblock %}

{% block body %}

    <div id="homepage">
        <div class="hero">
            <img src="https://static.seetheworld.com/image_uploader/photos/14/original/great-pre-season-snow-conditions-in-curchevel-courchevel-valley.jpg" alt="montagne">
            <a href="#tricks"><i class="fas fa-arrow-down"></i></a>
        </div>

        <h2 class="text-center mt-5">Figures</h2>

        <div class="grid-section" id="tricks">
            {% for i in 0..10 %}
                <div class="trick-item">
                    <a href="#">
                        <img src="https://static.seetheworld.com/image_uploader/photos/14/original/great-pre-season-snow-conditions-in-curchevel-courchevel-valley.jpg" alt="img">
                    </a>
                    <div class="info-trick">
                    <span class="name-trick">
                        Trick name
                    </span>
                        <span class="action-trick">
                        <a href="#"><i class="fas fa-pencil-alt"></i></a><a href="#"><i class="fas fa-trash"></i></a>
                    </span>
                    </div>
                </div>
            {% endfor %}
        </div>

        <a href="#tricks" class="arrow-up"><i class="fas fa-arrow-up"></i></a>
    </div>



{% endblock %}
